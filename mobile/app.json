{
  "expo": {
    "name": "Calonik - Smart Calorie Tracker",
    "slug": "calonik-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.calonik.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Calonik uses the camera to analyze food items and estimate their nutritional content for accurate calorie tracking.",
        "NSPhotoLibraryUsageDescription": "Calonik needs access to your photo library to analyze food images for nutritional information."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F172A"
      },
      "package": "com.calonik.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Calonik to access your camera to scan food items for nutritional analysis."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#0F172A"
        }
      ]
    ]
  }
}