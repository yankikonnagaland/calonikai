{
  "expo": {
    "name": "Calonik AI",
    "slug": "calonik-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ai.calonik.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "ai.calonik.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Calonik AI to access your camera to analyze food images for calorie tracking."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Calonik AI to access your photo library to select food images for analysis."
        }
      ]
    ],
    "scheme": "calonik-ai",
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}